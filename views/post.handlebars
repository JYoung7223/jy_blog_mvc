<div class="text-center">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p><small>Created by {{user.name}} on {{formatDate createdAt}}</small></p>
    <div class="border">
        <h3>Leave a Comment</h3>
        <form class="form post-comment">            
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" type="textarea" id="comment"></textarea>
            </div>
            <input type="hidden" name="post" id="post" value="{{id}}"/>
            <div class="form-group">
                <button class="btn btn-primary" type="submit" id="postComment">Post Comment</button>
            </div>
        </form>
    </div>
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
    <div class="border" id="comment{{comment.id}}">
        <p>{{comment.comment}}</p>
        <p><small>Created by {{comment.user.name}} on {{formatDate comment.createdAt}}</small></p>
    </div>
    {{/each}}
</div>

<script src="../js/post.js"></script>